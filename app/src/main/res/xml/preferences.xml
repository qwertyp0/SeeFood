        <CheckBoxPreference
            android:key="biotin"
            android:title="Biotin"
            android:defaultValue="false"/>
        <CheckBoxPreference
            android:key="pantothenic_acid"
            android:title="Pantothenic Acid"
            android:defaultValue="false"/>
        <CheckBoxPreference
            android:key="vitamin_k"
            android:title="Vitamin K"
            android:defaultValue="false"/>
        <CheckBoxPreference
            android:key="vitanim_e"
            android:title="Vitamin E"
            android:defaultValue="false"/>
    </PreferenceCategory>
</PreferenceScreen >